<div class="page-header">
  <h1>
    Wishlists
    <a href="/wishlists/new" class="btn btn-lg btn-success">New Wishlist</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Date</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @wishlists.each do |wishlist| %>
      <tr>
        <td><%= wishlist.name %></td>
        <td><%= wishlist.date %></td>
        <td><%= wishlist.user.email %></td>
        <td>
          <a href="/wishlists/<%= wishlist.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == wishlist.user %>
            <a href="/wishlists/<%= wishlist.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_wishlist/<%= wishlist.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @wishlists, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
